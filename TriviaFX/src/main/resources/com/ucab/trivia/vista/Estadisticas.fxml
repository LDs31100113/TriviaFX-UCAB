<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="500.0" prefWidth="800.0" spacing="10.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ucab.trivia.controlador.EstadisticasController">
    <padding><Insets bottom="10.0" left="10.0" right="10.0" top="10.0" /></padding>
    <Label text="Ranking de Jugadores">
        <font><Font name="System Bold" size="24.0" /></font>
    </Label>
    <TableView fx:id="tablaEstadisticas" prefHeight="400.0">
        <columns>
            <TableColumn fx:id="colAlias" prefWidth="150.0" text="Alias" />
            <TableColumn fx:id="colGanadas" prefWidth="100.0" text="Ganadas" />
            <TableColumn fx:id="colPerdidas" prefWidth="100.0" text="Perdidas" />
            <TableColumn fx:id="colJugadas" prefWidth="100.0" text="Jugadas" />
            <TableColumn fx:id="colCorrectas" prefWidth="250.0" text="Preguntas Correctas por Categoría" />
            <TableColumn fx:id="colTiempo" prefWidth="100.0" text="Tiempo Total (s)" />
        </columns>
    </TableView>
    <Button onAction="#onRegresar" text="Regresar al Menú Principal" />
</VBox>